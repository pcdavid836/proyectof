<Window x:Class="proyectof2.Reinicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicie Sesion!" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" Content="Iniciar sesión" FontSize="16" HorizontalAlignment="Center" Grid.Column="1"/>
        <Label VerticalAlignment="Center" Grid.Row="1" Content="Usuario:" FontSize="14"/>
        <Label VerticalAlignment="Center" Grid.Row="2" Content="Contraseña:" FontSize="14"/>
        <PasswordBox VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="2" x:Name="passwordbox1" FontSize="12" Grid.ColumnSpan="3" Margin="10"/>
        <TextBox VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="1" Name="textbox1" FontSize="14" Grid.ColumnSpan="3" Margin="10"/>
        <Button x:Name="b1" Margin="10" Grid.Row="3" Grid.ColumnSpan="3" Content="INGRESAR" FontSize="16" Click="b1_Click"></Button>
    </Grid>
</Window>